<div class="row sign">
  <div class="col-md-7">
      <img src="/images/start.jpeg" alt="start" class="login-img">
  </div>

  <div class="col-md-5">
    <h2>Log in</h2>
    <p class="small-title">ログイン</p>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group sign-content">
        <div class="row">
          <div class="col-md-8 col-md-offset-2">
            <%= fa_icon("envelope") %>
            <%= f.label :メールアドレス %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "abc@mail.com", class: "form-control" %>
          </div>
        </div>
      </div>

      <div class="form-group sign-content">
        <div class="row">
          <div class="col-md-8 col-md-offset-2">
            <%= fa_icon("lock") %>
            <%= f.label :パスワード %><br />
            <%= f.password_field :password, autocomplete: "current-password", placeholder: "半角英数字6文字以上", class: "form-control" %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-md-8 col-md-offset-2">
          <%= f.submit "ログイン", class:"btn col-md-4 col-md-offset-4 btn-ellipse" %>
        </div>
      </div>
    <% end %>

      <div class="row">
        <div class="sign-content">
          <div class="col-md-8 col-md-offset-2">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
  </div>
</div>

