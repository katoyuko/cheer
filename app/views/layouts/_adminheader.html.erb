<!-- 管理者用ヘッダー -->

<header id="header">
  <div class="header-logo">
    <%= image_tag "/images/logo.png", class: "logo" %>
  </div>

  <nav>
    <ul>
      <% if admin_signed_in? %>
        <p>For Admin</p>
        <li><%= link_to "Home", root_path, class: "link" %></li>
        <li><%= link_to "About", about_path, class: "link" %></li>
        <li><%= link_to "All posts", admins_posts_path, class: "link" %></li>
        <li><%= link_to "All user", admins_users_path, class: "link" %></li>
        <li><%= link_to "Category management", admins_post_categories_path, class: "link" %></li>
        <li><%= link_to "New admin", new_admin_registration_path, class: "link" %></li>
        <li><%= link_to "Log out", destroy_admin_session_path, method: :delete, class: "link" %></li>
      <% else %>
        <p>For Admin</p>
        <li><%= link_to "Home", root_path, class: "link" %></li>
        <li><%= link_to "About", about_path, class: "link" %></li>
        <li><%= link_to "Log in", new_user_session_path, class: "link" %></li>
      <% end %>
    </ul>
  </nav>
</header>