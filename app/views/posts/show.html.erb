<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2>Post</h2>
      <p class="small-title">投稿</p>

      <div class="col-md-6 col-md-offset-3">
        <div class="col-md-12">
          <section>
            <%= attachment_image_tag @post, :image, size: "520x430", format: "jpg" %>
              <!-- 非同期で画像を表示させるなら、写真とカテゴリ、つぶやきは横並びにする -->
            <label class="post-category"><span># </span><%= @post.post_category.category %></label>

            <p class="post-show-content"><%= @post.post_content%></p>

            <p class="post-cheer"><i class="fa fa-flag" style="color: #ff5752;"></i> 3 cheer</p>
            <p class="post-comment">
              <i class="fa fa-comment"></i> <%= @post.post_comment.count %>comment
            </p>

            <p class="post-show-content">
              <%= @post.created_at %><br>
              posted by <%= @post.user.name %>
           </p>


            <% if @post.user.id == current_user.id %>
              <div class="row">
                <div class="col-md-4 col-md-offset-4 btn-link">
                 <p class="btn col-md-2 btn-block btn-ellipse"><%= link_to "編集 ", edit_post_path(@post.id) %></p>
               </div>
             </div>
            <% end %>

          </section>
        </div>
      </div>

      <%= form_for[@post, @post_comment] do |f| %>
        <div class="row">
          <div class="col-md-12">
            <%= f.text_area :comment, rows: "5", class: "form-control", placeholder: "コメント入力" %>
          </div>
        </div>
        <%= f.submit "送信", class: "btn btn-lg btn-base-1 mt-20 pull-right" %>
      <% end %>

      <ul>
        <% @post.post_comments.each do |post_comment| %>
          <li class="comment">
            <div class="comment-user">
              <%= post_comment.user.name %>
            </div>
            <div class="comment-date">
              <%= post_comment.created_at.strftime('%Y/%m/%d') %>
            </div>
            <div class="comment-text">
              <%= post_comment.comment %>
            </div>
          </li>
        <% end %>
      </ul>

    </div>
  </div>
</div>