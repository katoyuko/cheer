<%= render "layouts/flash" %>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2>All posts</h2>
      <p class="small-title">投稿一覧</p>

      <div class="jscroll">
        <% @posts.each do |post| %>
          <div class="col-md-3">
            <div class="col-md-12 post-index">
              <section>

                <%= attachment_image_tag post, :image, size: "220x190", format: "png" %>

                <div class="post-content-body">
                  <label class="post-category"><span># </span><%= post.post_category.category %></label>
                  <!-- 投稿内容は70文字以上は省略 -->
                  <p class="post-content"><%= post.post_content.truncate(70) %></p>
                  <p class="pull-right post-arrow"><%= link_to "→", post_path(post.id) %></p>
                </div>

                <p class="post-user">
                  <%= post.created_at.strftime('%Y/%m/%d') %><br>posted by <%= post.user.name %>
                </p>

                <p class="post-content">
                  <i class="fa fa-comment"></i> <%= link_to "#{post.post_comments.count} comment", post_path(post.id), class: "post-content" %>
                </p>

                <p class="post_cheer">
                  <i class="fa fa-flag"></i> <%= post.post_cheers.count %> cheer
                </p>

              </section>
            </div>
          </div>
        <% end %>
        <%= paginate @posts %>
      </div>

    </div>
  </div>
</div>