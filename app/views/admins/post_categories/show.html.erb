<!-- カテゴリ別投稿一覧ページ -->
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2># <%= @post_category.category %></h2>

      <div class="category-body">
        <%= render "admins/post_categories/category_body" %>
      </div>

      <div class="row paginate">
        <div class="col-md-4 col-md-offset-4" id="current_page">
          <%= paginate @posts, class: "paginate" %>
        </div>
      </div>

      <div class="row category-btn">
        <div class="col-md-3 col-md-offset-3">
          <%= link_to "> 他のカテゴリを見る", admins_root_path, class: "btn btn-ellipse" %>
        </div>

        <div class="col-md-3">
          <%= link_to "> すべての投稿を見る", admins_posts_path, class: "btn btn-ellipse" %>
        </div>
      </div>

    </div>
  </div>
</div>