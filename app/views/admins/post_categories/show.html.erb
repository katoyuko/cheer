<!-- カテゴリ別投稿一覧ページ -->
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2># <%= @post_category.category %></h2>

        <% @posts.each do |category_post| %>
          <div class="col-md-3">
            <div class="col-md-12 thumbnail post-index">
              <section>

                <%= link_to admins_post_path(category_post.id), class: "image-link" do %>
                  <%= attachment_image_tag category_post, :image, :fill, 280, 220, format: "png", fallback: "/images/no-image.png", class: "img-responsive", id: "postimage" %>
                <% end %>

                <div class= "caption">
                  <div class="post-content-body-category">
                    <div class="post-content-body-cate-top">
                      <p class="post-content"><%= category_post.post_content.truncate(70) %></p>
                    </div>
                    <div class="post-content-body-cate-bottom">
                      <p class="pull-right post-arrow"><%= link_to "more ▶︎", admins_post_path(category_post.id) %></p>
                    </div>
                  </div>

                  <p class="post-user">
                    <%= category_post.created_at.strftime('%Y/%m/%d') %><br>posted by <%= link_to category_post.user.name.truncate(15), admins_user_path(category_post.user.id), class: "post-user-link" %>
                  </p>

                  <p class="post-content">
                    <p class="post_cheer">
                      <i class="fa fa-flag-o" id="<%= category_post.id %>"></i>
                      <%= category_post.cheer_count %> cheer
                    </p>
                    <i class="fa fa-comment-o"></i> <%= link_to "#{category_post.post_comments.count} comment", admins_post_path(category_post), class: "post-content" %>
                  </p>
                </div>

              </section>
            </div>
          </div>
        <% end %>

      <!-- ページャー per20 -->
      <div class="row paginate">
        <div class="col-md-4 col-md-offset-4" id="current_page">
          <%= paginate @posts, class: "paginate" %>
        </div>
      </div>

      <div class="row category-btn">
        <div class="col-md-3 col-md-offset-3">
          <%= link_to "他のカテゴリを見る", admins_root_path, class: "btn btn-block btn-ellipse" %>
        </div>

        <div class="col-md-3">
          <%= link_to "すべての投稿を見る", admins_posts_path, class: "btn btn-block btn-ellipse" %>
        </div>
      </div>

    </div>
  </div>
</div>