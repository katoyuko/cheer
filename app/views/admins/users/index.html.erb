<%= render "layouts/flash" %>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2>All users</h2>
      <p class="small-title">ユーザー一覧</p>

      <div class="row">
        <div class="col-md-10 col-md-offset-1">
          <table class="table table-hover" id="table">
            <thead>
              <tr>
                <th>ID</th>
                <th>画像</th>
                <th>名前</th>
                <th>メールアドレス</th>
                <th></th>
                <th></th>
              </tr>
            </thead>

            <% @users.each do |user| %>
            <tbody>
              <tr>
                <td><%= user.id %></td>
                <td><%= attachment_image_tag user, :user_image, :fill, 50, 50, format: 'jpeg'%></td>
                <td><%= user.name %></td>
                <td><%= user.email %></td>
                <td><%= link_to "詳細", admins_user_path(user.id), class: "btn btn-ellipse" %></td>
                <td><%= link_to "削除", admins_user_path(user), method: :delete, data: {confirm: "本当に削除しますか？"}, class: "btn btn-ellipse-red" %></td>
              </tr>
           </tbody>

          <% end %>
            </table>
        </div>
      </div>

      <div class="col-md-4 col-md-offset-4">
        <%= paginate @users, class: "paginate" %>
      </div>

    </div>
  </div>
</div>