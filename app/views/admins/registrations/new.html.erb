<div class="row sign">
  <div class="col-md-4 col-md-offset-4">

    <h2>Sign up</h2>
    <p class="small-title">新規登録</p>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "admins/shared/error_messages", resource: resource %>

      <div class="form-group sign-content">
        <div class="row">
          <div class="col-md-12">
            <%= fa_icon("envelope") %>
            <%= f.label :メールアドレス %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "例: abc@mail.com", class: "form-control" %>
          </div>
        </div>
      </div>

      <div class="form-group sign-content">
        <div class="row">
          <div class="col-md-12">
            <%= fa_icon("lock") %>
            <%= f.label :パスワード %><br />
            <%= f.password_field :password, autocomplete: "new-password", placeholder: "半角英数字6文字以上", class: "form-control" %>
          </div>
        </div>
      </div>

      <div class="form-group sign-content">
        <div class="row">
          <div class="col-md-12">
            <%= fa_icon("lock") %>
            <%= f.label :パスワード（確認用） %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "半角英数字6文字以上", class: "form-control" %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-md-12 sign-content">
          <%= f.submit "登録", class:"btn col-md-4 col-md-offset-4 btn-ellipse" %>
        </div>
      </div>
    <% end %>

      <div class="form-group sign-content">
        <div class="row">
          <div class="col-md-12">
            <%= render "admins/shared/links" %>
          </div>
        </div>
      </div>

  </div>
</div>